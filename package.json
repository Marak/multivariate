{
  "name": "splitjs",
  "version": "0.0.1",
  "description": "A Javascript A/B test library",
  "main": "./lib/index.js",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "babel src --out-dir lib",
    "prepublish": "npm run build"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "4"
          }
        }
      ]
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/connector",
      "<rootDir>/node_modules/"
    ]
  },
  "author": "Ufuk Kayserilioglu <ufuk@paralaus.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "jest": "^21.2.1",
    "redis": "^2.8.0"
  },
  "dependencies": {
    "uuid": "^3.1.0"
  }
}
